<div class="row" style="height:80px"></div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <!-- Card Container -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                <form method="post" action="/Login/Login">
                    <div class="form-group mb-3" style="margin-left:50px">
                        <label for="username"><b>Username</b>:</label>
                        <input type="text" id="username" name="username" class="form-control" placeholder="Please enter Username" required />
                    </div>
                    <div class="form-group mb-3" style="margin-left:50px">
                        <label for="password" style=""><b>Password</b>:</label>
                        <input type="password" id="txtPassword" name="password" class="form-control" placeholder="Please enter Password" equired />

                    </div>
                    @*<div class="form-group mt-4" style="">
                        <button type="submit" class="btn btn-dark w-25">Login</button>
                    </div>*@
                    <div class="form-group d-flex justify-content-center align-items-center mt-4" style="">
                        <button type="submit" class="btn btn-dark w-25">Login</button>
                    </div>

                </form>
                </div>
            </div>
        </div>
    </div>
</div>













